<% total_vs_closed_issues_enabled = Setting.plugin_redmine_graphs[:total_vs_closed_issues_enabled] ? true : false %>
<% burndown_enabled = Setting.plugin_redmine_graphs[:burndown_enabled] ? true : false %>
<% burnup_enabled = Setting.plugin_redmine_graphs[:burnup_enabled] ? true : false %>

<% if User.current.allowed_to?(:view_graphs, @project) %>
<%# if @version.issues_count > 0 %>
<% if total_vs_closed_issues_enabled %>
    <fieldset id='target_version_graph'>
      <legend><%= l(:label_graphs_total_vs_closed_issues) %></legend>
      <%= render partial: 'hooks/redmine_graphs/view_versions_show_graph', locals: {version: version, action_name: 'target_version_graph'} %>
    </fieldset>
<% end %>
<% if burndown_enabled %>
    <fieldset id='target_version_graph'>
      <legend><%= l(:label_graphs_burndown) %></legend>
      <%= render partial: 'hooks/redmine_graphs/view_versions_show_graph', locals: {version: version, action_name: 'burndown_graph'} %>
    </fieldset>
<% end %>
<% if burnup_enabled %>
    <fieldset id='target_version_graph'>
      <legend><%= l(:label_graphs_burnup) %></legend>
      <%= render partial: 'hooks/redmine_graphs/view_versions_show_graph', locals: {version: version, action_name: 'burnup_graph'} %>
    </fieldset>
<% end %>
<%# end %>
<% end %>
